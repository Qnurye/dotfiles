// Zed settings
// https://github.com/Qnurye/dotfiles
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "lsp_document_colors": "background",
  "indent_guides": {
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "show_edit_predictions": true,
  "debugger": {
    "button": true
  },
  "status_bar": {
    "active_language_button": true
  },
  "use_system_window_tabs": true,
  "preview_tabs": {
    "enable_preview_from_file_finder": false
  },
  "title_bar": {
    "show_menus": false,
    "show_sign_in": true
  },
  "project_panel": {
    "button": true
  },
  "buffer_font_weight": 400.0,
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Symbols Icon Theme"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write"
  },
  "ui_font_size": 16,
  "buffer_font_family": "Maple Mono NF CN",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Nord Dark"
  },
  "autosave": "on_focus_change",
  "languages": {
    "C++": {
      "show_edit_predictions": false,
      "format_on_save": "on",
      "tab_size": 2
    },
    "TypeScript": {
      "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "lf"
      }
    }
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "show_diagnostics": "errors",
    "file_icons": true,
    "git_status": true
  },
  "toolbar": {
    "code_actions": true,
    "quick_actions": true,
    "selections_menu": false
  },
  "inlay_hints": {
    "show_type_hints": false,
    "enabled": true
  },
  "terminal": {
    "font_family": "Maple Mono NF CN"
  },
  "unnecessary_code_fade": 0.3,
  "vim_mode": true,
  "experimental.theme_overrides": {
    "syntax": {
      "variable": {
        "font_weight": 700
      },
      "function": {
        "font_style": "italic",
        "font_weight": 700
      },
      "type": {
        "font_style": "italic"
      }
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  }
}
